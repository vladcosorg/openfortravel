{
  "functions": {
    "predeploy": "yarn workspace functions run build",
    "source": "packages/functions/dist",
    "ignore": ["*.map"]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8082
    },
    "ui": {
      "enabled": true
    },
    "pubsub": {
      "port": 8085
    },
    "hosting": {
      "port": 5000
    }
  },
  "hosting": {
    "public": "packages/admin/dist/spa",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
