{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "incremental": true,
    "target": "es2017",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "strict": false,
    "lib": ["es2019", "DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "types": [],
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
