{
  "name": "functions",
  "version": "0.3.1",
  "scripts": {
    "prebuild": "rm -rf ./dist && mkdir ./dist &&  cp package.json dist/package.json",
    "compile": "microbundle build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "build": "npm run prebuild && npm run compile",
    "build-watch": "microbundle -w build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "copy": "cp package.json dist/ && cp README.md dist/ && cp .npmrc dist/",
    "serve": "run-p build-watch start-emulators",
    "start-emulators": "firebase emulators:start ",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy-env": "firebase functions:config:set env=\"$(cat .env.json)\"",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.7.4",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.1",
    "ky": "^0.25.1",
    "ky-universal": "^0.8.2",
    "lodash": "^4.17.20",
    "microbundle": "^0.13.0",
    "nodemailer": "^6.6.2",
    "nodemailer-mailgun-transport": "^2.1.3",
    "scrape-it": "5.3.1",
    "vue-auto-i18n": "1.1.0-beta.18"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.2",
    "@types/nodemailer-mailgun-transport": "^1.4.2",
    "firebase-functions-test": "^0.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  },
  "private": true
}
