{
  "name": "functions",
  "version": "0.3.1",
  "scripts": {
    "prebuild": "rm -rf ./dist && mkdir ./dist &&  cp package.json dist/package.json",
    "compile": "microbundle build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "build": "npm run prebuild && npm run compile",
    "build-watch": "microbundle -w build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "copy": "cp package.json dist/ && cp README.md dist/ && cp .npmrc dist/",
    "serve": "run-p build-watch start-emulators",
    "start-emulators": "firebase emulators:start ",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy-env": "firebase functions:config:set env=\"$(cat .env.json)\"",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "format": "yarn run -T prettier --write  .",
    "lint": "yarn run -T _lint packages/functions",
    "fix": "yarn format && yarn lint"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.13.0",
    "firebase-admin": "^9.11.0",
    "firebase-functions": "^3.15.3",
    "ky": "^0.25.1",
    "ky-universal": "^0.8.2",
    "lodash": "^4.17.21",
    "microbundle": "^0.13.3",
    "nodemailer": "^6.6.3",
    "nodemailer-mailgun-transport": "^2.1.3",
    "scrape-it": "5.3.1",
    "vue-auto-i18n": "1.1.0-beta.19"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "eslint-formatter-friendly": "^7.0.0",
    "firebase-functions-test": "^0.3.1"
  },
  "private": true
}
