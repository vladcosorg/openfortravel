{
  "name": "functions",
  "version": "0.3.1",
  "scripts": {
    "prebuild": "rm -rf ./dist && mkdir ./dist &&  cp package.json dist/package.json",
    "compile": "microbundle build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "build": "npm run prebuild && npm run compile",
    "build-watch": "microbundle -w build src/index.ts --output dist/index.js --target node --format cjs --no-sourcemap",
    "copy": "cp package.json dist/ && cp README.md dist/ && cp .npmrc dist/",
    "serve": "run-p build-watch start-emulators",
    "start-emulators": "firebase emulators:start ",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy-env": "firebase functions:config:set env=\"$(cat .env.json)\"",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint . --ext .js,.vue,.ts",
    "format": "prettier --write  .",
    "fix": "yarn lint --fix; yarn format"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.13.0",
    "firebase-admin": "^9.11.0",
    "firebase-functions": "^3.15.3",
    "ky": "^0.28.5",
    "ky-universal": "^0.9.1",
    "lodash": "^4.17.21",
    "microbundle": "^0.13.3",
    "nodemailer": "^6.6.3",
    "nodemailer-mailgun-transport": "^2.1.3",
    "scrape-it": "5.3.1",
    "vue-auto-i18n": "1.1.0-beta.19"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "eslint-plugin-unused-imports": "^1.1.3",
    "eslint-plugin-vue": "^7.16.0",
    "firebase-functions-test": "^0.3.1",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^3.10.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.3.5"
  },
  "private": true
}
