{
  "name": "functions",
  "version": "0.3.1",
  "scripts": {
    "start": "run-s _build:prebuild:prepare-dir _build:prebuild:create-runtime-config _build:compile; run-p _build:watch _firebase:start-emulators",
    "build": "run-s -nc _build:prebuild:prepare-dir _build:prebuild:create-lock _build:compile",
    "deploy": "firebase deploy --only functions",
    "serve": "run-s build create-runtime-config start-emulators",
    "shell": "npm run build && firebase functions:shell",
    "start-shell": "npm run shell",
    "deploy-env": "firebase functions:config:set env=\"$(cat .env.json)\"",
    "logs": "firebase functions:log",
    "format": "yarn run -T prettier --write  .",
    "lint": "yarn run -T _lint packages/functions",
    "fix": "yarn format && yarn lint",
    "_build:prebuild": "run-s _build:prebuild:prepare-dir _build:prebuild:create-runtime-config",
    "_build:prebuild:create-lock": "cd ./dist; npm i --package-lock-only",
    "_build:prebuild:create-runtime-config": "firebase functions:config:get > ./dist/.runtimeconfig.json",
    "_build:prebuild:prepare-dir": "rm -rf ./dist && mkdir ./dist &&  cp package.json dist/package.json",
    "_build:fix-paths": "tscpaths --project tsconfig.json  -s ../ -o ./dist",
    "_build:fix-paths:watcher": "nodemon --watch dist --exec 'yarn run _build:fix-paths' ",
    "_build:compile": "tsc || true; yarn _build:fix-paths",
    "_build:watch": "tsc-watch --onCompilationComplete  \"yarn run _build:fix-paths \"",
    "_firebase:start-emulators": "NODE_ENV=development firebase emulators:start --import=./seed/production/"
  },
  "engines": {
    "node": "14"
  },
  "main": "functions/src/index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.13.1",
    "@openfortravel/shared": "latest",
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4",
    "i18n-iso-countries": "^6.8.0",
    "ky": "^0.25.1",
    "ky-universal": "^0.8.2",
    "lodash": "^4.17.21",
    "microbundle": "^0.13.3",
    "nodemailer": "^6.6.3",
    "nodemailer-mailgun-transport": "^2.1.3",
    "qs": "^6.10.1",
    "query-types": "^0.1.4",
    "scrape-it": "5.3.1",
    "tsc-watch": "^4.5.0",
    "vue-auto-i18n": "1.1.0-beta.20"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "@types/qs": "^6",
    "@types/tsc-watch": "^4.2.0",
    "eslint-formatter-friendly": "^7.0.0",
    "firebase-functions-test": "^0.3.2",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "tsconfig-replace-paths": "^0.0.5",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.2"
  },
  "private": true
}
